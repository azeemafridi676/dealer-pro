<div class="mb-6 md:mb-8">
  <div class="flex flex-col space-y-2">
    <h1 class="text-2xl md:text-3xl font-bold text-primary">
      {{title}}
    </h1>
    <p *ngIf="subtitle" class="text-sm md:text-base text-primary/60">
      {{subtitle}}
    </p>
  </div>
</div>

<div class="flex flex-col lg:flex-row justify-between items-start  shadow-sm rounded-lg p-4 lg:items-center gap-3 lg:gap-4 mb-4 lg:mb-6">
  <div class="flex items-center space-x-3 lg:space-x-5 w-full lg:w-auto">
    <div class="w-full lg:w-auto">
      <div class="space-y-1">
        <div class="flex items-center space-x-3">
          <h1 class="text-xl sm:text-2xl font-semibold text-primary truncate">
            {{title}}
          </h1>
        </div>
        <div class="flex items-center">
          <p class="text-sm text-gray-600 truncate">
            {{subtitle || ''}}
          </p>
        </div>
      </div>
    </div>
  </div>

