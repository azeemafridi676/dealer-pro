    <!-- User Profile -->
    <div class="relative">
      <button (click)="toggleProfileDropdown($event)" 
              class="flex items-center space-x-3 p-2 rounded-lg transition-all duration-200">
        <div class="w-10 h-10 rounded-lg bg-primary-light flex items-center justify-center">
          <span class="text-primary font-medium text-base">{{user?.first_name?.charAt(0) || ''}}{{user?.last_name?.charAt(0) || ''}}</span>
        </div>
        <div class="text-left hidden sm:block">
          <p class="text-sm font-medium text-primary truncate max-w-[120px]">{{user?.first_name}} {{user?.last_name}}</p>
          <!-- <p class="text-xs text-gray-500 truncate max-w-[120px]">{{user?.email}}</p> -->
        </div>
        <i class="ri-arrow-down-s-line text-primary/60"
           [class.rotate-180]="isProfileDropdownOpen"
           class="transition-transform duration-200"></i>
      </button>

      <!-- Profile Dropdown Menu -->
      <div *ngIf="isProfileDropdownOpen"
           class="absolute right-0 mt-2 w-[calc(100vw-2rem)] sm:w-64  rounded-lg shadow-lg border border-primary/10 
                  z-50 transform origin-top transition-all duration-200">
        <div class="p-4 border-b border-primary/10">
          <p class="font-medium text-primary text-sm truncate">{{user?.firstName}} {{user?.lastName}}</p>
          <p class="text-xs text-gray-500 truncate">{{user?.email}}</p>
        </div>
        
        <div class="py-2">
          <a routerLink="/dashboard/profile" 
             class="flex items-center space-x-3 px-4 py-2.5 transition-colors">
            <i class="ri-user-settings-line text-primary"></i>
            <span class="text-sm text-gray-700">Account Settings</span>
          </a>
          <button type="button" 
                  (click)="logout()" 
                  class="flex w-full items-center space-x-3 px-4 py-2.5 transition-colors">
            <i class="ri-logout-box-line text-primary"></i>
            <span class="text-sm text-gray-700">Logout</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>